---
import allPosts from "../allPosts.js";
import MultiplePostPage from "../layouts/MultiplePostPage.astro";

const posts = await allPosts();
const postsFirstPage = posts.slice(0, 10);
const nextPage = posts.length > 10 ? "/pages/2.html" : null;
---

<MultiplePostPage
  area="home"
  title="Home"
  posts={postsFirstPage}
  nextPage={nextPage}
/>
