---
import BaseLayout from "../layouts/BaseLayout.astro";
import PostFragment from "../layouts/PostFragment.astro";
import siteInfo from "../siteInfo.js";

const { area, nextPage, posts, previousPage, title } = Astro.props;
---

<BaseLayout area={area} title={title}>
  <h1>{ siteInfo.title }</h1>
  <p>{ siteInfo.description }</p>
  {posts.map((post) => <PostFragment post={post} />)}
  <p>
    {
      nextPage ? (
        <a class="next" href={nextPage}><strong>Older posts</strong></a>
        <span>&nbsp;</span>
      ) : (
        ""
      )
    }
    {
      previousPage ? (
        <a class="previous" href={previousPage}><strong>Newer posts</strong></a>
      ) : (
        ""
      )
    }
  </p>
  <footer>
    <a href="/feed.xml">RSS feed</a>
    <a href="/feed.json">JSON feed</a>
    <a href="https://github.com/JanMiksovsky/pondlife-astro">View source</a>
  </footer>
</BaseLayout>
